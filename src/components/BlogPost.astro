---
import Author from './Author.astro';

export interface Props {
  title: string;
  author: string;
  publishDate: string;
  image: string;
}

const { title, author, publishDate, image, alt } = Astro.props;
---

<div class="layout">
  <article class="content">
  <div>
    <header>

      {image && <img width="720" height="420" class="hero-image" loading="lazy" src={image} alt={alt} />}
    </header>
    <main class="mx-auto">
      <div class="header">
        <h1 class="title">{title}</h1>
        <p class="text-dark-lighter text-italic text-md">{publishDate}</p>
      </div>
      <slot />
    </main>
  </div>
  </article>
</div>

<style>
</style>
